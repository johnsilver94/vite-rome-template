{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": ["./node_modules/*", "./dist/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"recommended": true,
				"noUselessFragments": "error",
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"recommended": true,
				"noUnusedVariables": "error",
				"noUndeclaredVariables": "error"
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true
			},
			"nursery": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"noImplicitBoolean": "off",
				"noNegationElse": "error",
				"noShoutyConstants": "error",
				"useBlockStatements": "error",
				"useFragmentSyntax": "error",
				"useShorthandArrayType": "error"
			}
		},
		"ignore": ["./node_modules/*", "./dist/*"]
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "all"
		}
	}
}
